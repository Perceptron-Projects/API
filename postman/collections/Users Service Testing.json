				{
					"listen": "test",
					"script": {
						"id": "718d70e8-1012-4108-af7c-2ad9ca653a3c",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response should be valid JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Token is present\", function () {",
							"    pm.expect(pm.response.json()).to.have.property('token');",
							"});",
							"",
							"pm.test(\"Role is 'superadmin'\", function () {",
							"    pm.expect(pm.response.json().role).to.eql(['superadmin']);",
							"});",
							"",
							"pm.test(\"User ID is '123'\", function () {",
							"    pm.expect(pm.response.json().userId).to.eql('123');",
							"});",
							"",
							"pm.test(\"Expires in 86400000 seconds\", function () {",
							"    pm.expect(pm.response.json().expiresIn).to.eql(86400000);",
							"});",
							""
						],
